#:kivy 1.0
#:import threading threading

<Label>:
    font_size: 30
    color: 0, 0, 0, 1

<Button>:
    size_hint: (0.8, 1)
    color: 1, 1, 1, 1
    font_size: 20

<KVBL>:
    input_query: input_query
    
    BoxLayout: 
        orientation: 'vertical'
        padding: 30

        BoxLayout:
            orientation: 'vertical'

            TextInput:
                id: input_query
                hint_text: 'Enter text'
                size_hint: (1, 4)  

            BoxLayout:
                orientation: 'horizontal'

                Button:
                    text: 'Translate'
                    on_release: root.on_enter()
                Button:
                    text: 'Speak'
                    on_release: threading.Thread(target = root.on_enter2).start()


        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.15)

        BoxLayout:
            orientation: 'vertical'

            TextInput:
                id: output_query_txtinput
                background_color: (0, 0, 0, 1)
                multiline: True
                readonly: True
                size_hint: (1, 6)

            BoxLayout:
                orientation: 'horizontal'
 

    BoxLayout: 
        orientation: 'vertical'
        padding: 30, 30, 30, 60

        BoxLayout: 
            orientation: 'vertical'
            pos_hint: {'right': 1, 'center_y': 0.5}
            
            id: data_table_box

            