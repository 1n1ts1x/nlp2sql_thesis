#:kivy 1.0
#:import threading threading

<Label>:
    font_size: 30
    color: 0, 0, 0, 1

<Button>:
    size_hint: (1, 1)
    color: 1, 1, 1, 1

<KVBL>:
    input_query: input_query

    BoxLayout: 
        orientation: 'vertical'
        padding: 50

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'English language query:'

            TextInput:
                id: input_query
                hint_text: 'Enter text'

            BoxLayout:
                orientation: 'horizontal'

                Button:
                    text: 'Translate'
                    on_release: root.on_enter()
                Button:
                    text: 'Speak'
                    on_release: threading.Thread(target = root.on_enter2).start()
    
        BoxLayout:
            orientation: 'horizontal'
            size_hint: (1, 0.15)

        BoxLayout:
            orientation: 'vertical'

            Label:
                text: 'Generated SQL query:'

            TextInput:
                id: output_query_txtinput
                background_color: (0, 0, 0, 1)
                multiline: True
                readonly: True
                size_hint: (1, 2)

            BoxLayout:
                orientation: 'horizontal'

